extends ../layout/index

block contenido
    h2(class = "text-center text-3xl uppercase font-serif") #{nombre}
    div(class="py-10")
        div(class="flex items-center justify-center")
                    p(class="text-grey-500 text-xl") Deseas ver tus productos? 
                        a(href="/", class="text-blue-500 text-xl") Ver mis productos
        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(action="/producto", method="post", class="space-y-5")
                    div
                        label(class="block text-gray-700 text-sm font-bold mb-2") Nombre Del Producto
                        input#title(placeholder="Ingresa un nombre",type="text",name="title",class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
                    div
                        label(class="block text-gray-700 text-sm font-bold mb-2") Precio
                        input#price(placeholder="Ingresa un precio",type="text",name="price",class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
                    div
                        label(class="block text-gray-700 text-sm font-bold mb-2") Thumbnail
                        input#thumbnail(placeholder="Ingresa una url",type="text",name="thumbnail",class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
                    div(class="flex items-center justify-center")
                            input(type="submit" value="Crear Producto" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded")