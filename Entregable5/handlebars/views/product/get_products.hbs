<div>
    <h2 class="text-center text-3xl uppercase font-serif">{{nombre}}</h2>
    <div class="py-6">
        {{#if exist}}
            <div class="flex items-center justify-center">
                <p class="text-grey-500 text-xl font-serif">Deseas crear mas productos? <a href="/producto" class="text-blue-500 text-xl font-serif">Crear Productos</a></p>
            </div>
            <div class="py-4"></div>
            <div class="flex flex-wrap justify-between">
                {{#each data}}
                    <div class="max-w-sm rounded overflow-hidden shadow-lg mb-5">
                        <img src={{thumbnail}} alt="" class="w-72 h-36">
                        <div class="px-4 py-4">
                            <div class="font-bold text-xl mb-2">
                                {{title}}
                                <p class="text-gray-700 text-base">
                                    Precio:
                                    <span class="text-gray-600 text-base">{{price}}</span>
                                </p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="flex items-center justify-center">
                <p class="text-grey-500 text-xl font-serif">Deseas crear mas productos? <a href="/producto" class="text-blue-500 text-xl font-serif">Crear Productos</a></p>
            </div>
        {{/if}}
    </div>
</div>